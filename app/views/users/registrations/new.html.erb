<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<center>
  
  <h1>新規登録</h1>
  <%= render "users/shared/links" %>

  <div class="field">
    <p>お名前</p>
    <%= f.text_field :last_name, placeholder: "※山田" %>
    <%= f.text_field :first_name, placeholder: "※太郎" %>
  </div>

  <div class="field">
    <p>お名前（カタカナ）</p>
    <%= f.text_field :last_name_kana, placeholder: "※ヤマダ" %>
    <%= f.text_field :first_name_kana, placeholder: "※タロウ" %>
  </div>

  <div class="field">
    <p>ニックネーム</p>
    <%= f.text_field :name, placeholder: "※ユーザーネーム" %>
  </div>

  <div class="field">
    <p>電話番号</p>
    <%= f.text_field :phone_number, placeholder: "※半角・ハイフン無し" %>
  </div>

  <div class="field">
    <p>郵便番号</p>
    <%= f.text_field :postal_code, placeholder: "※半角・ハイフン無し" %>
  </div>

  <div class="field">
    <p>住所</p>
    <%= f.text_area :street_address, placeholder: "※入力フォーム拡大　↓" %>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <%= f.text_field :email, placeholder: "※メールアドレスを入力" %>
  </div>

  <div class="field">
    <p>パスワード
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </p>
      <%= f.password_field :password, placeholder: "※半角　英数字" %>
  </div>

  <div class="field">
    <p>パスワード再入力</p>
    <%= f.password_field :password_confirmation, placeholder: "※半角　英数字" %>
  </div>

  <div class="actions">
      <div style="padding: 20px;"><%= f.submit "新規登録" %></div>
  </div>
  
</center>


<% end %>