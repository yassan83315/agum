<div class="container">
	<div class="col-md-3">
		<h1>マイページ</h1>
		<div class="user-profile">
			<h4>ユーザーネーム</h4>
			<div class="space"><%= @user.name %></div>
		</div>
		<%= link_to "プロフィールの確認/変更", edit_user_user_path(current_user.id), class: "btn btn-default" %>
	</div>
	<h1>あなたの投稿一覧</h1>
	<% @posts.each do |p| %>
		<div class="col-md-3">
			<%= attachment_image_tag p, :image, fomat: 'jpg', size: "300x300", fallback: "no_image.jpg" %>
			<div class="post-conntent-line">時期</div>
			<%= p.season.season_name %>
			
			<div class="post-conntent-line">場所</div>
			<%= p.region.region_name %>
		</div>
	<% end %>
</div>
