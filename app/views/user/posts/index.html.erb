<div class="container">

    <h1>投稿一覧</h1>
    <% @posts.each do |post| %>
        <div class="post-box">
            <div class="col-md-4 ">
                <%= attachment_image_tag post, :image, fomat: 'jpg', size: "300x300", fallback: "no_image.jpg" %>

                <div class="post-conntent-line">時期</div>
                <%= post.season.season_name %>
                
                <div class="post-conntent-line">場所</div>
                <%= post.region.region_name %>
            </div>
        </div>
    <% end %>

</div>