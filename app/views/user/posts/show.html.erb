<div class="contaimer clearfix">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1>投稿の内容</h1>
        <div class="user-show-content">
            <%= attachment_image_tag @post, :image, fomat: 'jpg', size: "600x500", fallback: "no_image.jpg" %>
            
            <div class="post-content-line">投稿者（ユーザーネーム）</div>
            <%= @post.user.name%>
            
            <div class="post-content-line">時期</div>
            <%= @post.season.season_name %>
                    
            <div class="post-content-line">地域</div>
            <%= @post.region.region_name %>
                    
            <div class="post-content-line">投稿者からのコメント</div>
            <%= @post.caption %>
        </div>
        <div class="post-delete-btn">
            <% if @post.user == current_user %>
                <span><%= link_to 'この投稿を削除する', user_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></span>
            <% end %>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
